<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:cardCornerRadius="22dp"
        app:cardElevation="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:id="@+id/cases">
            <TextView
                android:id="@+id/state_confirmed_cases_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:fontFamily="sans-serif-light"
                android:text="Confirmed Cases"
                android:textSize="22sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/state_active_cases_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:fontFamily="sans-serif-light"
                android:text="Active Cases"
                android:textSize="22sp"
                android:textStyle="normal" />

</LinearLayout>

            <TextView
                android:id="@+id/state_confirmed_cases_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cases"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="5453"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/state_active_cases_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cases"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="5453"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/state_recovered_cases_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_confirmed_cases_count_tv"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin"
                android:fontFamily="sans-serif-light"
                android:text="Recovered Cases"
                android:textSize="22sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/state_recovered_cases_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_recovered_cases_tv"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="5453"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/state_death_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_confirmed_cases_count_tv"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:fontFamily="sans-serif-light"
                android:text="Death"
                android:textSize="22sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/state_death_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_death_tv"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="5453"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/state_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/state_death_count_tv"
                android:layout_margin="15dp"
                android:background="#bdbdbd" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/state_line">
            <TextView
                android:id="@+id/state_name_tv"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/update_icon"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:fontFamily="sans-serif-medium"
                android:text="Maharashtra"
                android:textSize="30sp" />

            <Button
                android:id="@+id/district_button"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin"
                android:layout_gravity="right"
                android:text="District" />
</LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>