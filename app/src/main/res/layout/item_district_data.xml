<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        app:cardCornerRadius="22dp"
        app:cardElevation="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/district_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:gravity="center_horizontal"
                android:text="District Name"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/district_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/district_name_tv"
                android:layout_margin="@dimen/margin"
                android:background="#cfd8dc" />

            <TextView
                android:id="@+id/district_total_cases_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district_line"
                android:layout_alignBaseline="@+id/district_total_cases_count_tv"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/margin"
                android:fontFamily="sans-serif-light"
                android:text="Total Cases"
                android:textSize="32sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/district_total_cases_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district_line"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="5453"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="42sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>